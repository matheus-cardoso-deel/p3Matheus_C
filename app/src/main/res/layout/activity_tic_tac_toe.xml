 <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="#E6E6E6"
        android:screenOrientation="portrait"
        tools:context=".TicTacToeActivity"
        android:orientation="vertical"
        android:weightSum="3" >

     <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:textAppearance="?android:attr/textAppearanceLarge"
         android:text="Play Tic-Tac-Toe: O's turn!"
         android:textColor="#000000"
         android:gravity="center"
         android:background="#FFFFFF"
         android:id="@+id/txtHeader"
         android:layout_weight="0.1"
         android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.93"
            android:orientation="horizontal"
            android:weightSum="3" >

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="60dp"
                android:background="#228556"
                android:layout_marginRight="5dp"
                android:id="@+id/button_0_0"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="60dp"
                android:background="#228556"
                android:layout_marginRight="5dp"
                android:id="@+id/button_0_1"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="60dp"
                android:background="#228556"
                android:id="@+id/button_0_2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.93"
            android:orientation="horizontal"
            android:weightSum="3" >

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="60sp"
                android:background="#228556"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:id="@+id/button_1_0"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="60sp"
                android:background="#228556"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:id="@+id/button_1_1"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="60sp"
                android:background="#228556"
                android:layout_marginTop="5dp"
                android:id="@+id/button_1_2"/>

        </LinearLayout>

        <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="0dp"
     android:layout_weight="0.93"
     android:orientation="horizontal"
     android:weightSum="3" >

     <Button
         android:layout_width="0dp"
         android:layout_height="match_parent"
         android:layout_weight="1"
         android:textSize="60sp"
         android:background="#228556"
         android:layout_marginRight="5dp"
         android:layout_marginTop="5dp"
         android:id="@+id/button_2_0"/>

            <Button
         android:layout_width="0dp"
         android:layout_height="match_parent"
         android:layout_weight="1"
                android:textSize="60sp"
                android:background="#228556"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:id="@+id/button_2_1"/>

     <Button
         android:layout_width="0dp"
         android:layout_height="match_parent"
         android:layout_weight="1"
         android:textSize="60sp"
         android:background="#228556"
         android:layout_marginTop="5dp"
         android:id="@+id/button_2_2"/>
 </LinearLayout>

     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_gravity="center_horizontal" >

     <Button
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="10dp"
         android:layout_marginRight="5dp"
         android:background="#228556"
         android:textColor="#FFFFFF"
         android:text="New Game"
         android:id="@+id/btnNewGame"/>


     <Button
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="10dp"
         android:background="#228556"
         android:textColor="#FFFFFF"
         android:text="Log"
         android:id="@+id/btnLog" />

     </LinearLayout>


 </LinearLayout>